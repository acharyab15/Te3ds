function dropButton(){
	var tempList = [];
	for (var i=LAST_PIECE_START_INDEX; i<table.length;i++){
           	tempList.push(table[i].ctm[2][3]);
           if(IsCubeCommonZ(table[i].pos)){
        	  addRandomShape();  
        	  return;
           }
           
	}
	if ((Math.min.apply(Math, tempList)) == 0) {
		    addRandomShape();
		return;
	} else {
		for (var i=LAST_PIECE_START_INDEX; i<table.length;i++){
           	table[i].ctm = mult(table[i].ctm,translate(0.0,0.0,-TRAN_AMT));
           	table[i].pos[2] -= TRAN_AMT;
		}
	}
	
};

function IsCubeCommonZ(pos){
	for(var i=FIRST_PIECE_START_INDEX;i < LAST_PIECE_START_INDEX;i++){
	    cube = table[i];
	    if(cube.pos[2]==(pos[2]-1)&&cube.pos[0]==pos[0]&& cube.pos[1]==pos[1]){
	      return true;
	    }
	}
	return false;
}

