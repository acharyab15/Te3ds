//rotate camera left
function rotateCameraLeft(){
	var rot = rotate(-ROT_AMT, [0, 0, 1]);
	modelView = mult(modelView,rot);
}

//rotate camera right
function rotateCameraRight(){
	var rot = rotate(ROT_AMT, [0, 0, 1]);
	modelView = mult(modelView,rot);
}